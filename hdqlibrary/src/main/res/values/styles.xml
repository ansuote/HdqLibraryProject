<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo.Light.NoActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <style name="dialog_transparent" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item><!--边框-->
        <item name="android:windowIsFloating">true</item><!--是否浮现在activity之上-->
        <item name="android:windowIsTranslucent">false</item><!--半透明-->
        <item name="android:windowNoTitle">true</item><!--无标题-->
        <item name="android:windowBackground">@android:color/transparent</item><!--背景透明-->
        <item name="android:backgroundDimEnabled">true</item><!--模糊-->
    </style>

    <style name="WideBtnStyle">
        <item name="android:textSize">@dimen/font_24</item>
        <item name="android:textColor">@color/light_black</item>
        <item name="android:textAllCaps">false</item>
    </style>
    

    <!--原生按钮主题，英文字母默认小写／去除粗体-->

    <style name="OriginalBtnStyle">
        <!--去掉默认英文字母大写样式-->
        <item name="android:textAllCaps">false</item>
        <!--去掉按钮粗体样式-->
        <item name="android:textAppearance">@style/Theme.AppCompat</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>
